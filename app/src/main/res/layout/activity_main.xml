<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suyashshukla.blooddonoapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/blood"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Blood Donor App"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="A Selfless Initiative taken up by NSS RJIT"
        android:fontFamily="monospace"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="List oF Donors"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:onClick="ListIntent"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="EXIT"
        android:layout_weight="1"
        android:textSize="25sp"/>

</LinearLayout>
